<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="320.0" prefWidth="497.0" styleClass="container" stylesheets="@../styles/study.css"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.StudyController">
    <AnchorPane layoutX="19.0" layoutY="23.0" minWidth="-Infinity" prefHeight="50.0" prefWidth="376.0">
        <Label layoutY="10.0" text="Flashcards">
            <styleClass>
                <String fx:value="header-title"/>
            </styleClass>
        </Label>
    </AnchorPane>
    <AnchorPane layoutX="80.0" layoutY="105.0" prefHeight="173.0" prefWidth="330.0">
        <Pane layoutX="2.0" layoutY="3.0" prefHeight="30.0" prefWidth="68.0">
            <Label prefHeight="25.0" prefWidth="45.0" text="Score:"/>
            <Label fx:id="scoreValue" layoutX="49.0" layoutY="1.0" text="0"/>
        </Pane>
        <Label fx:id="flashcardDescription" layoutX="81.0" layoutY="51.0" text="Lorem Ipsum amet oror">
            <styleClass>
                <String fx:value="label"/>
                <String fx:value="flashcard-description"/>
            </styleClass>
        </Label>
        <Button layoutX="46.0" layoutY="108.0" mnemonicParsing="false" onMouseClicked="#updateScore" text="Wrong">
            <styleClass>
                <String fx:value="btn"/>
                <String fx:value="wrong-btn"/>
            </styleClass>
        </Button>
        <Button layoutX="211.0" layoutY="108.0" mnemonicParsing="false" onMouseClicked="#updateScore" text="Correct">
            <styleClass>
                <String fx:value="btn"/>
                <String fx:value="correct-btn"/>
            </styleClass>
        </Button>
    </AnchorPane>
</AnchorPane>
