<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="270.0" prefWidth="429.0" styleClass="container" stylesheets="@../styles/share-flashcard.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ShareFlashcardController">
    <AnchorPane layoutX="19.0" layoutY="23.0" minWidth="-Infinity" prefHeight="50.0" prefWidth="376.0">
        <Label layoutY="10.0" text="Flashcards">
            <styleClass>
                <String fx:value="header-title" />
            </styleClass>
        </Label>
    </AnchorPane>
    <AnchorPane layoutX="44.0" layoutY="82.0" prefHeight="146.0" prefWidth="342.0" styleClass="options-box">
        <AnchorPane layoutX="-1.0" layoutY="14.0" prefHeight="87.0" prefWidth="329.0">
            <Label layoutX="25.0" layoutY="2.0" text="Share flashcard with:">
            <styleClass>
               <String fx:value="label" />
            </styleClass></Label>
            <TextField fx:id="emailInput" layoutX="25.0" layoutY="33.0" prefHeight="28.0" prefWidth="195.0" promptText="example@email.com">
                <styleClass>
                    <String fx:value="input" />
                </styleClass>
            </TextField>
        </AnchorPane>
        <Button layoutX="140.0" layoutY="111.0" mnemonicParsing="false" onMouseClicked="#shareFlashcard" text="Share">
            <styleClass>
                <String fx:value="share-flashcard-btn" />
                <String fx:value="btn" />
            </styleClass>
        </Button>
    </AnchorPane>
</AnchorPane>
