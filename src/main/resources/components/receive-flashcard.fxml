<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Pane?>

<FlowPane alignment="TOP_RIGHT" prefHeight="232.0" prefWidth="278.0" styleClass="flashcard-wrapper" stylesheets="@../styles/receive-flashcard.css"
          xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="controllers.ReceiveFlashcardController">
    <AnchorPane fx:id="flashcardAnchorPane" prefHeight="232.0" prefWidth="317.0" onMouseClicked="#flipFlashcard">
        <Pane prefHeight="232.0" prefWidth="317.0">
            <Label fx:id="flashcardBack" alignment="CENTER" layoutX="5.0" layoutY="5.0" prefHeight="224.0"
                   prefWidth="307.0" styleClass="flashcard-back" text="Label" visible="false" wrapText="true"/>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Pane>
        <Pane layoutY="1.0" prefHeight="232.0" prefWidth="317.0">
            <Label fx:id="flashcardFront" alignment="CENTER" prefHeight="232.0" prefWidth="317.0"
                   styleClass="flashcard-front" text="Label" wrapText="true"/>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Pane>
        <Pane fx:id="flashcardToolBar" layoutX="144.0" layoutY="189.0" prefHeight="35.0" prefWidth="173.0"
              styleClass="flashcard-tool-bar">
            <Button layoutX="1.0" layoutY="-1.0" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false"
                    onMouseClicked="#refuseFlashcard" prefHeight="37.0" prefWidth="74.0" text="Accept">
                <styleClass>
                    <String fx:value="accept-btn"/>
                    <String fx:value="flashcard-btn"/>
                    <String fx:value="btn"/>
                </styleClass>
            </Button>
            <Button layoutX="91.0" layoutY="-1.0" mnemonicParsing="false" onMouseClicked="#acceptFlashcard"
                    prefHeight="32.0" prefWidth="74.0" text="Refuse">
                <styleClass>
                    <String fx:value="refuse-btn"/>
                    <String fx:value="flashcard-btn"/>
                    <String fx:value="btn"/>
                </styleClass>
            </Button>
        </Pane>
        <styleClass>
            <String fx:value="flashcard"/>
            <String fx:value="front-bg"/>
        </styleClass>
    </AnchorPane>
</FlowPane>
