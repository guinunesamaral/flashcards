                    <String fx:value="btn" />
                </styleClass>
            </Button>
            <Button layoutX="65.0" layoutY="-1.0" mnemonicParsing="false" onMouseClicked="#openUpdateFlashcardScene" prefHeight="32.0" prefWidth="22.0">
                <styleClass>
                    <String fx:value="update-btn" />
                    <String fx:value="flashcard-btn" />
                    <String fx:value="btn" />
                </styleClass>
            </Button>
        </Pane>
    </AnchorPane>
</FlowPane>
