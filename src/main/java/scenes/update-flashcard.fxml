<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="container" stylesheets="@../styles/update-flashcard.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.UpdateFlashcard">
    <AnchorPane layoutX="175.0" layoutY="75.0" prefHeight="250.0" prefWidth="245.0" styleClass="options-box">
        <Button layoutX="221.0" mnemonicParsing="false" onMouseClicked="#returnToPreviousScene">
            <styleClass>
                <String fx:value="close-btn" />
                <String fx:value="btn" />
            </styleClass>
        </Button>
        <TextField fx:id="titleInput" layoutX="25.0" layoutY="43.0" prefHeight="28.0" prefWidth="195.0" promptText="Title">
            <styleClass>
                <String fx:value="title-input" />
                <String fx:value="input" />
            </styleClass>
        </TextField>
        <TextArea fx:id="descriptionInput" layoutX="25.0" layoutY="89.0" prefHeight="90.0" prefWidth="195.0" promptText="Description">
            <styleClass>
                <String fx:value="description-input" />
                <String fx:value="input" />
            </styleClass>
        </TextArea>
        <Button layoutX="94.0" layoutY="201.0" mnemonicParsing="false" onMouseClicked="#updateFlashcard" text="Update">
            <styleClass>
                <String fx:value="update-btn" />
                <String fx:value="btn" />
            </styleClass>
        </Button>
    </AnchorPane>
</AnchorPane>
