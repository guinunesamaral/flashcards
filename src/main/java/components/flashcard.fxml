<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>

<FlowPane fx:id="flashcardWrapper" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="150.0" prefWidth="188.0" styleClass="flashcard-wrapper" stylesheets="@../styles/flashcard.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.FlashcardController">
   <children>
      <AnchorPane fx:id="flashcard" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0" prefWidth="200.0" styleClass="flashcard">
          <children>
              <FlowPane alignment="CENTER" orientation="VERTICAL" prefHeight="41.0" prefWidth="200.0">
                  <children>
                      <Label fx:id="flashcardTitle" alignment="TOP_CENTER" styleClass="flashcard__title" text="Label" />
                  </children>
              </FlowPane>
              <FlowPane alignment="CENTER" layoutY="41.0" orientation="VERTICAL" prefHeight="63.0" prefWidth="200.0">
                  <children>
                      <Label fx:id="flashcardDescription" alignment="CENTER" styleClass="flashcard__description" text="Label" />
                  </children>
              </FlowPane>
              <ToolBar fx:id="flashcardToolBar" layoutX="103.0" layoutY="109.0" prefHeight="41.0" prefWidth="97.0" styleClass="flashcard-tool-bar">
                  <items>
                      <Button fx:id="removeFlashcardBtn" mnemonicParsing="false" onMouseClicked="#removeFlashcard" prefHeight="30.0" prefWidth="30.0">
                          <styleClass>
                              <String fx:value="flashcard__remove-btn" />
                              <String fx:value="flashcard-btn" />
                        <String fx:value="btn" />
                          </styleClass>
                      </Button>
                      <Button fx:id="shareFlashcardBtn" mnemonicParsing="false" onMouseClicked="#shareFlashcard" prefHeight="30.0" prefWidth="30.0">
                     <styleClass>
                        <String fx:value="flashcard__share-btn" />
                        <String fx:value="flashcard-btn" />
                        <String fx:value="btn" />
                     </styleClass>
                      </Button>
                      <Button fx:id="editFlashcardBtn" mnemonicParsing="false" onMouseClicked="#editFlashcard" prefHeight="30.0" prefWidth="30.0">
                     <styleClass>
                        <String fx:value="flashcard__edit-btn" />
                        <String fx:value="flashcard-btn" />
                        <String fx:value="btn" />
                     </styleClass>
                      </Button>
                  </items>
              </ToolBar>
          </children>
      </AnchorPane>
   </children>
</FlowPane>
